{% extends 'base.html.twig' %} {% block body %} {% for message in app.flashes('notice') %}
<div class="alert alert-success">
    {{ message }}
</div>
{% endfor %} {% for events in events %}
<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="{{events.image}}" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">{{events.name}}</h5>
        <p class="card-text">{{events.description}}</p>
        <a href="/details/{{events.id}}" class="btn btn-success">View</a> {# a tag to go to the path /details/{{todo.id}} so we send the id of the record with the path (like when we are using get method ) #}
        <a href="/edit/{{events.id}}" class="btn btn-primary">Edit</a>
        <a href="/delete/{{events.id}}" class="btn btn-danger">Delete</a>
    </div>
</div>
{% endfor %} {% endblock %}